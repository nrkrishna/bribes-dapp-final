<br>
<center><h3>Corruption Watch</h3></center>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bribeModal">Report Bribe</button>

  <div class="modal fade" id="bribeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bribe Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= form_for :bribedetails do |f| %>
            <div class="form-group">
              <%= f.label :date,  'Date bribe was paid' %>
              <%= f.text_field :date, :class=>"form-control", :type => "date" %>
            </div>
            <div class="form-group">
              <%= f.label :amount,  'Amount in Indian Rupees (₹)' %>
              <!-- <input type="amount" class="form-control" id="inputAmount" placeholder="Amount paid in INR"> -->
              <%= f.text_field :amount, :class=>"form-control", :placeholder => 'Amount paid in ₹' %>
            </div>
            <div class="form-group">
              <%= f.label :details,  'Details of bribe' %>
              <%= f.text_area :details, :class=>"form-control", :placeholder => 'Enter details of bribe, such as location, officer name and reason for bribe', :rows => 4 %>
              <!--<textarea class="form-control" id="inputDetails" placeholder="Enter details of bribe, such as location, officer name and reason for bribe" rows = 4></textarea>-->
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        <% end  %>
      </div>
    </div>
  </div>
</div>
